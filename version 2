        "# Smart Rule-Based Course Assistant Bot (With Politeness)\n",
        "\n",
        "def course_assistant_bot():\n",
        "    print(\"Hello! I am your AI Course Assistant. How can I help you today?\")\n",
        "    print(\"You can ask about: course schedule, assignments, professors, AI topics, or resources.\\n\")\n",
        "\n",
        "    while True:\n",
        "        user_input = input(\"You: \").lower()\n",
        "\n",
        "        # Polite responses\n",
        "        if any(word in user_input for word in [\"thank\", \"thanks\"]):\n",
        "            print(\"Bot: You're welcome! Happy to help ðŸ˜Š\")\n",
        "\n",
        "        elif \"sorry\" in user_input:\n",
        "            print(\"Bot: No worries at all! Feel free to ask anything.\")\n",
        "\n",
        "        # Intent 1: Course Schedule\n",
        "        elif any(word in user_input for word in [\"schedule\", \"time\", \"class\", \"when\"]):\n",
        "            print(\"Bot: Here's the course schedule:\")\n",
        "            print(\" - Tuesday: Introduction to AI and Cybersecurity\")\n",
        "            print(\" - Wednesday: Research Methods\")\n",
        "            print(\" - Thursday: Programming for AI\")\n",
        "            print(\" - Friday: Cryptography\")\n",
        "\n",
        "        # Intent 2: Assignments\n",
        "        elif any(word in user_input for word in [\"assignment\", \"homework\", \"due\", \"tasks\", \"projects\"]):\n",
        "            print(\"Bot: Programming for AI has three projects:\")\n",
        "            print(\" 1. Data Analysis\")\n",
        "            print(\" 2. Chat Bot\")\n",
        "            print(\" 3. Machine Learning\")\n",
        "\n",
        "        # Intent 3: Professor Info\n",
        "        elif any(word in user_input for word in [\"professor\", \"instructor\", \"teacher\", \"who\"]):\n",
        "            print(\"Bot: Here are the professors for each course:\")\n",
        "            print(\" - Introduction to AI: Madam Hinga\")\n",
        "            print(\" - Cybersecurity: Mr. Rogers\")\n",
        "            print(\" - Research Methods: Mr. Jerud\")\n",
        "            print(\" - Programming for AI: Madam Hinga\")\n",
        "            print(\" - Cryptography: Mr. Rogers\")\n",
        "\n",
        "        # Intent 4: AI Topics\n",
        "        elif any(word in user_input for word in [\"topic\", \"ai topic\", \"machine learning\", \"subject\", \"content\"]):\n",
        "            print(\"Bot: Currently, we are covering Machine Learning basics, including supervised and unsupervised learning.\")\n",
        "\n",
        "        # Intent 5: Resources\n",
        "        elif any(word in user_input for word in [\"resources\", \"books\", \"materials\", \"tutorials\", \"references\"]):\n",
        "            print(\"Bot: Recommended resources include 'Artificial Intelligence: A Modern Approach' by Russell & Norvig and online tutorials on Coursera.\")\n",
        "\n",
        "        # Exit\n",
        "        elif any(word in user_input for word in [\"exit\", \"bye\", \"quit\", \"goodbye\"]):\n",
        "            print(\"Bot: Thank you for chatting! Have a great day! ðŸ‘‹\")\n",
        "            break\n",
        "\n",
        "        # Unknown input\n",
        "        else:\n",
        "            print(\"Bot: I'm sorry, I didn't understand that. Could you please rephrase your question?\")\n",
        "\n",
        "# Run the bot\n",
        "course_assistant_bot()\n"
      ],
